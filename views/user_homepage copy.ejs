
<!-- THIS PAGE IS WHERE THE USER'S PAGE SHOWS -->

<!-- Displays their private quizzes and public quizzes. And allows them to create a quiz of their own (button will be linked to createQuiz.ejs file) -->

<!DOCTYPE html>
<html lang="en">



<!<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />
    <title>QuizApp</title>
  </head>

  <body>
    <header>
      <nav>
        <a href="/home/<%= user_id %>">
          <h1>KWIZY</h1>
        </a>
        <a href="/home/<%= user_id %>">
          <div class="create-quiz-link">
            Home
          </div>
        </a>
      </nav>
    </header>
    <div class="main-container">
      <% if (userData.length > 0) {%>
      <h1>Welcome <%= userData[0].users_name %>!</h1>
      <a href="/users/createquiz/<%= userData[0].user_id %>">
        <div class="create-quiz-link">
          Create your own quiz!
        </div>
      </a>
      <h2>Here are your quizzes:</h2>
      <div class="links-container">
        <% for (let quiz of userData) {%>
        <div class="quiz-cont">
          <a href="/attempts/<%= quiz.id%>/<%= quiz.user_id %>">
            <div class="quiz-link">
              <%= quiz.name %>
              <br>
              <p><%= quiz.description %></p>
            </div>
          </a>
          <form method="POST" action="/users/<%= quiz.user_id %>/delete/<%= quiz.id %>">
            <button class="delete-btn" type="submit">Delete Quiz?
            </button>
          </form>
          <br>
        </div>
        <%}%>
    </div>
    <% } else { %>
        <h1>Welcome!</h1>
        <a href="/users/createquiz/<%= user_id %>">
          <div class="create-quiz-link">
            Create your own quiz!
          </div>
        </a>
        <%}%>
      </div>
      <script type="text/javascript" src="/scripts/client.js"></script>
  </body>
  </html>
