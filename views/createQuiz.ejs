    <title>Create New Quiz</title>
    <%- include('partials/_assets') %>

  </head>

  <body>
    <%- include('partials/_header') %>
    <div class="row justify-content-center">
      <div class="col-md-6">
    <main style="margin: 1em;">
    <h3>Create a New Quiz</h3>
    <form class="form-inline" action="/createQuiz" method="POST">
      <label for="text">Quiz Title
      <input
        type="text"
        name="title"
        placeholder="Enter quiz title"
        style="width: 300px; margin: 1em"
      />
      </label>

      <label for="text">Questions
      <input
        type="text"
        name="questions"
        placeholder="Quiz questions"
        style="width: 300px; margin: 1em"
      />
    </label>
    <label for="text">Answers
      <input
        type="text"
        name="answers"
        placeholder="Quiz answers"
        style="width: 300px; margin: 1em"
      />
    </label>

      <button type="submit" class="btn btn-primary">Create Quiz</button>

  </form>
</main>



